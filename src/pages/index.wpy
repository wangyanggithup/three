                that.location = false
                that.nolocation = true
                that.$apply()
              }
            })
          }
        }
      })
    }

    onPageScroll (e) {
      if (e.scrollTop > this.navScrollTop) {
        this.navFixed = true
        this.$apply()
      } else {
        this.navFixed = false
        this.$apply()
      }
    }
