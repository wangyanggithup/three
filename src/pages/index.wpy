            wepy.getLocation({
              type: 'gcj02',
              success: function(res) {
                console.log('index onload 没权限  wepy.getLocationc  success')
                wepy.setStorageSync('lat', res.latitude)
                wepy.setStorageSync('lng', res.longitude)
                that.changeName()
              },
              fail() {
